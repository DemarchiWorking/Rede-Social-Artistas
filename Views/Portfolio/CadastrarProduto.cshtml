@model Produto

<h2>Registrar </h2>
<br />
<form asp-controller="Portfolio" asp-action="CadastrarPortfolio">

  <div class="form-group">
    <label for="name">Nome:</label>
    <input type="text" class="form-control" asp-for="Nome">
    <span asp-validation-for="Nome" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label for="email">Email:</label>
    <input type="email" class="form-control" asp-for="Descricao">
    <span asp-validation-for="Descricao" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label for="senha"> Link da Foto: </label>
    <input type="password" class="form-control" asp-for="Foto">
    <span asp-validation-for="Foto" class="text-danger"></span>
  </div>

    <div class="form-group">
     <label for="senha">Valor:</label>
     <input type="number" class="form-control" asp-for="Valor">
     <span asp-validation-for="Valor" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-block btn-dark"> Registrar </button>
</form>